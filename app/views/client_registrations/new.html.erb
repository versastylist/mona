<h1>Client Registration</h1>

<%= form_for @registration do |f| %>
  <% if @registration.errors.any? %>
    <ul>
      <% @registration.errors.full_messages.each do |error|  %>
        <li><%= error %></li>
      <% end %>
    </ul>
  <% end %>

  <div class="form-group">
    <%= f.label :first_name %>
    <%= f.text_field :first_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :last_name %>
    <%= f.text_field :last_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :phone_number %>
    <%= f.phone_field :phone_number, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :avatar %>
    <%= f.file_field :avatar %>
  </div>

  <div class="form-group">
    <%= f.label "Date of birth" %>
    <%= f.date_field :dob %>
  </div>

  <div class="form-group">
    <%= f.label :gender %>
    <%= f.select :gender, Registration::GENDERS %>
  </div>

  <div class="form-group">
    <%= f.label :timezone %>
    <%= f.select :timezone, Registration::TIMEZONES %>
  </div>

  <div class="form-group">
    <%= f.label :facebook %>
    <%= f.text_field :facebook, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :linked_in %>
    <%= f.text_field :linked_in, class: "form-control" %>
  </div>

  <%= f.submit 'Register', class: 'btn btn-success' %>
<% end %>
