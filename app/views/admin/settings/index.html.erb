<ol class="breadcrumb">
  <%= breadcrumb('Dashboard', admin_dashboard_path) %>
  <%= breadcrumb_active('Settings') %>
</ol>

<h1>App Settings</h1>

<%= form_for [:admin, GlobalSetting.instance] do |f| %>
  <div class="form-group">
    <%= f.label :appointment_buffer %>
    <%= f.select :appointment_buffer, [15, 30, 45, 60], class: 'form-control'  %>
  </div>

  <%= f.submit 'Update Settings', class: 'btn btn-warning' %>
<% end %>

