<ol class="breadcrumb">
  <%= breadcrumb('Dashboard', admin_dashboard_path) %>
  <%= breadcrumb_active('Stylists') %>
</ol>

<h1>All Stylists</h1>

<h3>Sort By</h3>
<div class="btn-group" role="group" aria-label="...">
  <%= sort_link('First Name', admin_stylists_path(sort: 'first_name'), 'first_name') %>
  <%= sort_link('Last Name', admin_stylists_path(sort: 'last_name'), 'last_name') %>
  <%= sort_link('Email', admin_stylists_path(sort: 'email'), 'email') %>
  <%= sort_link('Username', admin_stylists_path(sort: 'username'), 'username') %>
  <%= sort_link('Date Registered', admin_stylists_path(sort: 'created_at'), 'created_at') %>
</div>
<hr />

<table class="table table-hover">
  <thead>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Email</th>
    <th>Username</th>
    <th>Date Registered</th>
    <th>Appointments</th>
  </thead>
  <tbody>
    <% @stylists.each do |stylist| %>
      <tr>
        <td><%= stylist.first_name || "not registered" %></td>
        <td><%= stylist.last_name  || "not registered" %></td>
        <td><%= stylist.email %></td>
        <td><%= stylist.username %></td>
        <td><%= stylist.created_at %></td>
        <td><%= link_to 'Appointments', admin_stylist_path(stylist), class: 'btn btn-info' %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= paginate @stylists %>
