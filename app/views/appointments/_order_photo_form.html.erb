<%= form_for [current_order, OrderPhoto.new] do |f| %>
  <div class="form-group">
    <%= f.label 'Upload Image' %>
    <%= f.file_field :image %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <%= f.hidden_field :purpose, value: purpose %>
  <%= f.submit 'Add Photo', class: 'btn btn-info' %>
<% end %>
