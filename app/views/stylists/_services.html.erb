<h1>Services</h1>

<%= link_to new_service_path, class: 'btn btn-success' do %>
  <i class="fa fa-plus"></i>
  Add Service
<% end %>

<table class="table table-hover">
  <thead>
    <th>Name</th>
    <th>Status</th>
    <th>Duration</th>
    <th>Settings</th>
  </thead>
  <tbody>
    <% @service_products.each do |service| %>
      <tr>
        <td><%= service.name %></td>
        <td>
          <%= check_box_tag '',
            '1', service.displayed,
            class: 'service-product-checkbox',
            id: service.id %>
           <i class="fa fa-spinner fa-spin" style="display:none" id="spin_<%= dom_id(service) %>"></i>
        </td>

        <td><%= service.minute_duration %></td>
        <td>
          <i class="fa fa-cog fa-2x"></i>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @service_products %>
