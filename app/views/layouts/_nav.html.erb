<nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <a href="/" class="navbar-brand">Mona</a>
    </div>

    <ul class="nav navbar-nav navbar-right">
      <%- if current_user.authenticated? -%>
        <li> <%= link_to 'Profile', current_user.profile_path %></li>
        <li> <%= link_to 'Find Service', menu_filters_path %></li>
        <li> <%= link_to 'Sign Out', destroy_user_session_path, method: :delete %> </li>
        <li>
          <%= link_to '#', id: "shopping-cart", data: { target: "#myModal", toggle: "modal" } do %>
            <i class="fa fa-shopping-cart"></i>
          <% end %>
        </li>
        <% if current_user.admin? %>
          <li> <%= link_to 'Create Survey', new_admin_survey_path %> </li>
          <li> <%= link_to 'View Surveys', admin_surveys_path %> </li>
        <% end %>
      <%- else -%>
        <li><%= link_to 'Sign Up', new_user_registration_path %></li>
        <li><%= link_to 'Sign In', new_user_session_path %></li>
      <%- end -%>
    </ul>
  </div>
</nav>

<div class="modal fade" id="myModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title text-center">Shopping Cart</h4>
      </div>
      <div class="modal-body">
        <% if @order_items.present? %>
          <table class="table table-hover">
            <thead>
              <th>Service</th>
              <th>Quantity</th>
              <th>Price</th>
            </thead>
            <tbody>
              <%= render @order_items %>
            </tbody>
          </table>
        <% else %>
          <p>There are no services in your cart</p>
          <%= link_to 'Find A Service', menu_filters_path, class: 'btn btn-success' %>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
