<h1 class="text-center">New Schedule</h1>

<%= form_for @schedule do |f| %>
  <%= f.hidden_field :start_date, value: schedule_week_one.first %>
  <%= f.hidden_field :end_date, value: schedule_week_two.last %>

  <div class="row">
    <div class="col-md-6 col-sm-6">
      <h3 class="text-center">Week One</h3>
      <% schedule_week_one.each do |week_day| %>
        <div class="panel panel-default">
          <div class="panel-body">
            <%= f.fields_for :week_days, @schedule.week_days.find_or_initialize_by(day_of_week: week_day) do |wday| %>
                <p><%= week_day.strftime('%A, %m/%d/%y') %></p>

                <div class="row">
                  <div class="col-md-4">
                      <%= wday.label :active %>
                    <div class="form-group">
                      <%= wday.check_box :active, value: "1" %>
                    </div>
                  </div>

                  <div class="col-md-4">
                    <div class="form-group">
                        <%= wday.label :start_time %>
                      <div class="input-group">
                        <%= wday.text_field :start_time, class: 'form-control start-timepicker' %>
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-time"></span>
                        </span>
                      </div>
                    </div>
                  </div>

                  <div class="col-md-4">
                    <div class="form-group">
                        <%= wday.label :end_time %>
                      <div class="input-group ">
                        <%= wday.text_field :end_time, class: 'form-control end-timepicker' %>
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-time"></span>
                        </span>
                      </div>
                    </div>
                  </div>
                </div>
                <%= wday.hidden_field :day_of_week, value: week_day %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="col-md-2"></div>

    <div class="col-md-6 col-sm-6">
      <h3 class="text-center">Week Two</h3>
      <% schedule_week_two.each do |week_day| %>
        <div class="panel panel-default">
          <div class="panel-body">
            <%= f.fields_for :week_days, @schedule.week_days.find_or_initialize_by(day_of_week: week_day) do |wday| %>
                <p><%= week_day.strftime('%A, %m/%d/%y') %></p>

                <div class="row">
                  <div class="col-md-4">
                      <%= wday.label :active %>
                    <div class="form-group">
                      <%= wday.check_box :active, value: "1" %>
                    </div>
                  </div>

                  <div class="col-md-4">
                    <div class="form-group">
                        <%= wday.label :start_time %>
                      <div class="input-group clockpicker">
                        <%= wday.text_field :start_time, class: 'form-control start-timepicker' %>
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-time"></span>
                        </span>
                      </div>
                    </div>
                  </div>

                  <div class="col-md-4">
                    <div class="form-group">
                        <%= wday.label :end_time %>
                      <div class="input-group clockpicker">
                        <%= wday.text_field :end_time, class: 'form-control end-timepicker' %>
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-time"></span>
                        </span>
                      </div>
                    </div>
                  </div>
                </div>
                <%= wday.hidden_field :day_of_week, value: week_day %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <%= f.submit 'Create Schedule', class: 'btn btn-success' %>
<% end %>
